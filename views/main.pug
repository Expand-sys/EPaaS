extends layout


block content
  .container
    h1 Welcome to the GUI Deployment interface #{user}
    .card.shadow-lg
      .row 
        .col
          h2 Deploy
        .col
          h2 Output
      hr
      .row 
        .col-4
          label App name(must be globally unique):
          br
          input.form-control-lg.shadow#appname(name='app', type='text' required)
          br
          br
          label github link(or other git link):
          br
          input.form-control-lg.shadow#github(type="text" name="github" required)
          br
          br
          label Domain (required for Lets Encrypt SSL):
          br
          input.form-control-lg.shadow#domain(type="text" name="domain" required)
          br
          br
          .row 
            .col 
              input#ssl(style="padding-left:10px" type="checkbox" name="ssl")
              label SSL Enable
            .col
              input#restart(style="padding-left:10px" type="checkbox" name="restart")
              label Restart on first load
          br
          label SSL Email (required for Lets Encrypt SSL)
          input.form-control-lg.shadow#sslemail(type="text" name="sslemail")

          br
          br
            
          button.btn.btn-primary#deploy(type="button" onclick="deploy()" value=user) Submit
        .col-8
          .card
            .output#output(style="height:30vh")
              ul#console
                
                
    script(type='text/javascript' src='https://www.gstatic.com/charts/loader.js')
  
    br
