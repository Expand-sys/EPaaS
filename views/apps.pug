extends layout


block content
  .container
    h1 Welcome to the GUI Deployment interface #{user}
    .card.shadow-lg
      for app in apps
        .card 
          .row 
            .col 
              p #{app}
            .col 
              button.btn.btn-warning#togglessl(type="button" onclick="togglessl()" value=app) ToggleSSL
            .col
              button.btn.btn-danger#destroy(type="button" onclick="destroy()" value=app) Destroy
    br
